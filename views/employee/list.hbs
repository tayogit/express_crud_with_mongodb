<h3 class="display-5"><a href="/employee" class="btn btn-outline-primary"><i class="fa fa-plus"></i> Create New </a> Employee List</h3>
<table class="table table-striped table-hover">
    <thead>
        <tr>
           <th>Full Name</th> 
           <th>Email </th> 
           <th>Mobile</th> 
           <th>City</th> 
           <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
            <tr>
                <td>{{ this.fullName}}</td>
                <td>{{ this.email}}</td>
                <td>{{ this.mobile}}</td>
                <td>{{ this.city}}</td>
                <td class="text-center">
                    <a href="/employee/{{this._id}}"><i class="fa fa-edit fa-lg" aria-hidden="true" 
                    data-toggle="tooltip" title="Edit"
                    ></i></a>
                    <a href=""><i class="fa fa-trash fa-lg" aria-hidden="true"
                    data-toggle="tooltip" title="Delete"
                    ></i></a>
                </td>

            </tr>
        {{/each}}
    </tbody>
</table>